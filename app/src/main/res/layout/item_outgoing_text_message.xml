<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/outgoing_bubble_backgrnd"
        android:paddingStart="8dp"
        android:paddingEnd="18dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvOutgoingMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Hey, how you doin!"
            android:layout_marginEnd="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvChatTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginEnd="4dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone"
            android:layout_toEndOf="@+id/tvOutgoingMessageText"
            tools:text="1:00"/>

        <ImageView
            android:id="@+id/ivTextStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/ic_check_single"
            android:layout_toEndOf="@+id/tvChatTimeStamp"
            android:contentDescription="@null" />

    </RelativeLayout>

</RelativeLayout>
